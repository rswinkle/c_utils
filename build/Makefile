# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  driver_config = debug
  cppdriver_config = debug
endif
ifeq ($(config),release)
  driver_config = release
  cppdriver_config = release
endif

PROJECTS := driver cppdriver

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

driver:
ifneq (,$(driver_config))
	@echo "==== Building driver ($(driver_config)) ===="
	@${MAKE} --no-print-directory -C . -f driver.make config=$(driver_config)
endif

cppdriver:
ifneq (,$(cppdriver_config))
	@echo "==== Building cppdriver ($(cppdriver_config)) ===="
	@${MAKE} --no-print-directory -C . -f cppdriver.make config=$(cppdriver_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f driver.make clean
	@${MAKE} --no-print-directory -C . -f cppdriver.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   driver"
	@echo "   cppdriver"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"